# ğŸ“ Setup details documented at: guides/tools/Flow
[ignore]

[include]

[libs]
flow-typed

[lints]

[options]
# ğŸ“ Show linter warnings
include_warnings=false
# ğŸ“ Declare file extensions to handle webpack asset imports
module.file_ext=.js
module.file_ext=.json
module.file_ext=.scss
# ğŸ“ Module mappers export mock types for webpack assets
module.name_mapper='^componentry' -> '<PROJECT_ROOT>/src'
module.name_mapper.extension='scss' -> '<PROJECT_ROOT>/__mocks__/css-modules.flow.js'
module.name_mapper.extension='md' -> '<PROJECT_ROOT>/__mocks__/markdown.flow.js'
module.name_mapper.extension='txt' -> '<PROJECT_ROOT>/__mocks__/txt.flow.js'
# ğŸ“ Resolve directories for webpack module resolution
module.system.node.resolve_dirname=node_modules
module.system.node.resolve_dirname=demo
# ğŸ“ Flow suppress comments
suppress_comment= \\(.\\|\n\\)*\\$FlowFixMe
suppress_comment= \\(.\\|\n\\)*\\$FlowIgnore
