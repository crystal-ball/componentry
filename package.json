{
  "name": "componentry",
  "version": "3.0.0",
  "description": "React Componentry",
  "sideEffects": false,
  "main": "commonjs/index.js",
  "module": "es/index.js",
  "esnext": "esnext/index.js",
  "types": "types/index.d.ts",
  "keywords": [
    "react",
    "components",
    "ui",
    "508",
    "accessible",
    "bootstrap"
  ],
  "contributors": [
    "Dan Hedgecock <hedgecock.d@gmail.com>",
    "Phillip Sauerbeck <psauerbeck@gmail.com>"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/crystal-ball/componentry.git"
  },
  "scripts": {
    "commit": "cz",
    "start": "start-storybook -p 6006",
    "babel:watch": "BABEL_ENV=esmodules babel src --watch --out-dir es --ignore '**/*.spec.js'",
    "test": "npm run test:lint && npm run test:types && npm run test:unit",
    "test:lint": "NODE_ENV=test eslint --format=pretty .",
    "test:types": "tsc",
    "test:unit": "BABEL_ENV=test NODE_ENV=test jest",
    "test:watch": "BABEL_ENV=test NODE_ENV=test JEST_NOTIFY=true jest --watch",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "format": "prettier --write . !CHANGELOG.md !coverage",
    "prepublishOnly": "npm run clean && npm run js",
    "postpublish": "npm run clean",
    "js": "npm run js:commonjs && npm run js:esmodules && npm run js:esnext",
    "js:commonjs": "BABEL_ENV=commonjs babel src -x '.ts,.tsx' --out-dir commonjs --ignore '**/*.spec.js,**/storybook'",
    "js:esmodules": "BABEL_ENV=esmodules babel src -x '.ts,.tsx' --out-dir es --ignore '**/*.spec.js,**/storybook'",
    "js:esnext": "BABEL_ENV=esnext babel src -x '.ts,.tsx' --out-dir esnext --ignore '**/*.spec.js,**/storybook'",
    "types": "tsc --project tsconfig.types.json",
    "clean": "rm -rf dist monitor commonjs es esnext types"
  },
  "peerDependencies": {
    "react": ">=16.8"
  },
  "dependencies": {
    "@babel/runtime": "7",
    "classnames": "2",
    "nanoid": "3"
  },
  "devDependencies": {
    "@babel/cli": "7.13.0",
    "@babel/core": "7.13.8",
    "@babel/plugin-transform-modules-commonjs": "7.13.8",
    "@babel/plugin-transform-runtime": "7.13.8",
    "@babel/preset-typescript": "7.13.0",
    "@crystal-ball/commitizen-base": "2.10.0",
    "@crystal-ball/prettier-base": "2.6.0",
    "@storybook/addon-essentials": "6.1.20",
    "@storybook/addon-links": "6.1.20",
    "@storybook/addons": "6.1.20",
    "@storybook/preset-scss": "1.0.3",
    "@storybook/react": "6.1.20",
    "@storybook/theming": "6.1.20",
    "@testing-library/jest-dom": "5.11.9",
    "@testing-library/react": "11.2.5",
    "@types/classnames": "2.2.11",
    "@types/nanoid": "2.1.0",
    "@types/react": "17.0.2",
    "@types/react-dom": "17.0.1",
    "babel-loader": "8.2.2",
    "css-loader": "5.1.0",
    "eslint-config-eloquence": "17.6.0",
    "eslint-plugin-mdx": "1.9.0",
    "jest": "26.6.3",
    "prettier": "2.2.1",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "sass": "1.32.8",
    "sass-loader": "10.1.1",
    "style-loader": "2.0.0",
    "typescript": "4.2.2"
  }
}
