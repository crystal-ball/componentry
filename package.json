{
  "name": "componentry",
  "version": "3.0.0-alpha.5",
  "description": "React Componentry",
  "sideEffects": false,
  "main": "lib/index.js",
  "module": "es/index.js",
  "esnext": "esnext/index.js",
  "keywords": [
    "react",
    "components",
    "ui",
    "508",
    "accessible",
    "bootstrap"
  ],
  "contributors": [
    "Dan Hedgecock <hedgecock.d@gmail.com>",
    "Phillip Sauerbeck <psauerbeck@gmail.com>"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/crystal-ball/componentry.git"
  },
  "engines": {
    "node": ">=8.11"
  },
  "scripts": {
    "commit": "git cz",
    "start": "webpack-serve",
    "test": "npm run lint && npm run test:unit",
    "prepublishOnly": "npm run clean && npm run js",
    "postpublish": "npm run clean",
    "flow": "flow",
    "deploy": "gh-pages -d build",
    "js": "npm run js:commonjs && npm run js:esmodules && npm run js:esnext",
    "test:unit": "BABEL_ENV=test NODE_ENV=test jest ",
    "test:watch": "BABEL_ENV=test NODE_ENV=test jest --watch",
    "format": "prettier --write \"{demo,src,styles}/**/*.{js,scss}\" guides/*.md",
    "lint": "NODE_ENV=test eslint src demo",
    "documentation": "webpack",
    "clean": "rm -rf dist monitor lib es esnext",
    "js:commonjs": "BABEL_ENV=common babel src --out-dir lib --ignore *.spec.js",
    "js:esmodules": "BABEL_ENV=esm babel src --out-dir es --ignore *.spec.js",
    "js:esnext": "BABEL_ENV=next babel src --out-dir esnext --ignore *.spec.js"
  },
  "peerDependencies": {
    "react": "^16.3"
  },
  "dependencies": {
    "babel-runtime": "^6.26.0",
    "classnames": "^2.2.6",
    "nanoid": "^1.2.3"
  },
  "devDependencies": {
    "@crystal-ball/webpack-base": "^1.2.0",
    "@inspirescript/magic-markdown-loader": "^1.0.0",
    "babel-cli": "~6.26.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.2",
    "babel-plugin-transform-react-remove-prop-types": "^0.4.18",
    "babel-plugin-transform-react-stateless-component-name": "^1.1.2",
    "babel-plugin-transform-runtime": "~6.23.0",
    "commitizen": "^3.0.1",
    "cz-customizable": "^5.2.0",
    "enzyme": "^3.6.0",
    "enzyme-adapter-react-16": "^1.5.0",
    "enzyme-to-json": "^3.3.4",
    "eslint-config-eloquence": "^9.4.0",
    "flow-bin": "^0.82.0",
    "gh-pages": "^2.0.0",
    "husky": "^1.1.0",
    "jest": "^23.6.0",
    "prettier": "^1.14.3",
    "prop-types": "^15.6.2",
    "raf": "^3.4.0",
    "react": "^16.5.2",
    "react-document-title": "^2.0.3",
    "react-dom": "^16.5.2",
    "react-hot-loader": "^4.3.11",
    "react-router": "^4.3.1",
    "react-router-dom": "^4.3.1",
    "react-test-renderer": "^16.5.2",
    "semantic-release": "^15.9.16",
    "styled-components": "^3.4.9"
  },
  "husky": {
    "prepush": "npm run test"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    }
  }
}
