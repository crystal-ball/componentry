{
  "name": "componentry",
  "version": "3.0.0-alpha.12",
  "description": "React Componentry",
  "sideEffects": false,
  "main": "lib/index.js",
  "module": "es/index.js",
  "esnext": "esnext/index.js",
  "typings": "./src/index.d.ts",
  "keywords": [
    "react",
    "components",
    "ui",
    "508",
    "accessible",
    "bootstrap"
  ],
  "contributors": [
    "Dan Hedgecock <hedgecock.d@gmail.com>",
    "Phillip Sauerbeck <psauerbeck@gmail.com>"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/crystal-ball/componentry.git"
  },
  "engines": {
    "node": ">=8.11"
  },
  "scripts": {
    "commit": "git cz",
    "start": "webpack-dev-server --mode=development",
    "test": "npm run lint && npm run test:unit",
    "prepublishOnly": "npm run clean && npm run js",
    "postpublish": "npm run clean",
    "flow": "flow",
    "test:unit": "BABEL_ENV=test NODE_ENV=test jest ",
    "test:watch": "BABEL_ENV=test NODE_ENV=test jest --watch",
    "format": "prettier --write \"{demo,src,styles}/**/*.{js,scss}\" guides/*.md",
    "lint": "NODE_ENV=test eslint src demo",
    "documentation": "NODE_ENV=production webpack --mode=production",
    "deploy": "gh-pages -d dist",
    "js": "npm run js:commonjs && npm run js:esmodules && npm run js:esnext",
    "js:commonjs": "BABEL_ENV=common babel src --out-dir lib --ignore *.spec.js",
    "js:esmodules": "BABEL_ENV=esmodules babel src --out-dir es --ignore *.spec.js",
    "js:esnext": "BABEL_ENV=next babel src --out-dir esnext --ignore *.spec.js",
    "clean": "rm -rf dist monitor lib es esnext"
  },
  "peerDependencies": {
    "react": "^16.3"
  },
  "dependencies": {
    "@babel/runtime": "^7.1.0",
    "classnames": "^2.2.0",
    "nanoid": "^2.0.0"
  },
  "devDependencies": {
    "@babel/cli": "~7.2.0",
    "@babel/plugin-syntax-object-rest-spread": "^7.2.0",
    "@babel/plugin-transform-modules-commonjs": "~7.2.0",
    "@babel/preset-flow": "~7.0.0",
    "@crystal-ball/webpack-base": "~4.2.2",
    "@inspirescript/magic-markdown-loader": "~1.0.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-plugin-transform-react-remove-prop-types": "~0.4.21",
    "commitizen": "~3.0.5",
    "cz-customizable": "~5.3.0",
    "enzyme": "~3.8.0",
    "enzyme-adapter-react-16": "~1.7.1",
    "enzyme-to-json": "~3.3.5",
    "eslint-config-eloquence": "~9.6.0",
    "flow-bin": "~0.89.0",
    "gh-pages": "~2.0.1",
    "husky": "~1.2.0",
    "jest": "~23.6.0",
    "prettier": "~1.15.3",
    "prop-types": "~15.6.2",
    "raf": "~3.4.1",
    "react": "~16.8.2",
    "react-document-title": "~2.0.3",
    "react-dom": "~16.8.2",
    "react-router": "~4.3.1",
    "react-router-dom": "~4.3.1",
    "react-test-renderer": "~16.6.3",
    "semantic-release": "~15.12.5",
    "styled-components": "~4.1.2"
  },
  "husky": {
    "prepush": "npm run test"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    }
  }
}
