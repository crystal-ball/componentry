{
  "name": "componentry",
  "version": "1.1.0",
  "description": "Radical React Components",
  "main": "dist/componentry.js",
  "module": "es/index.js",
  "engines": {
    "node": ">=6.9.5"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/crystal-ball/componentry"
  },
  "scripts": {
    "buildnotes": "setting node env to production keeps react hot loader out of build",
    "build": "npm run build:esmodules && npm run build:amdmodule",
    "build:esmodules": "NODE_ENV=production babel lib --out-dir es",
    "build:amdmodule": "NODE_ENV=production rollup -c",
    "build:docs": "webpack -p --env=production",
    "start": "webpack-dev-server",
    "sass": "node-sass styles/componentry-build.scss dist/componentry.css --include-path=node_modules/bootstrap/scss",
    "svg:demo": "svg-sprite --defs --defs-dest=public/assets --defs-sprite=icons.svg assets/svgs/*.svg",
    "svg:dist": "svg-sprite --defs --defs-dest=dist/assets --defs-sprite=icons.svg assets/svgs/*.svg",
    "test": "BABEL_ENV=test mocha lib/test/setup.js $(find lib -name '*.spec.js')"
  },
  "keywords": [
    "react",
    "components",
    "ui",
    "508",
    "accessible",
    "bootstrap"
  ],
  "author": "Dan Hedgecock <hedgecock.d@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@crystal-ball/eslint-config-eloquence": "^1.0.0",
    "@inspire-script/webpack-configs": "1.1.0",
    "babel-cli": "^6.24.1",
    "babel-eslint": "^7.2.3",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-export-extensions": "^6.22.0",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-plugin-transform-react-remove-prop-types": "^0.4.6",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-babili": "^0.0.12",
    "babel-register": "^6.24.1",
    "bootstrap": "4.0.0-alpha.6",
    "chai": "^3.5.0",
    "classnames": "^2.2.5",
    "enzyme": "^2.7.1",
    "jsdom": "^9.12.0",
    "mocha": "^3.2.0",
    "prop-types": "^15.5.8",
    "react": "^15.5.4",
    "react-addons-test-utils": "^15.4.2",
    "react-dom": "^15.5.4",
    "react-router": "^4.0.0",
    "react-router-dom": "^4.0.0",
    "rollup": "^0.41.6",
    "rollup-plugin-babel": "^2.7.1",
    "rollup-plugin-commonjs": "^8.0.2",
    "rollup-plugin-node-resolve": "^3.0.0",
    "sinon": "^2.0.0",
    "svg-sprite": "^1.3.6",
    "webpack": "^2.2.1",
    "webpack-dev-server": "^2.4.2"
  },
  "dependencies": {
    "babel-runtime": "^6.23.0"
  }
}
