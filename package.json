{
  "name": "componentry",
  "version": "1.3.0",
  "description": "Radical React Components",
  "main": "dist/componentry.js",
  "module": "es/index.js",
  "engines": {
    "node": ">=6.9.5"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/crystal-ball/componentry"
  },
  "scripts": {
    "start": "webpack-dev-server --env=development",
    "test": "BABEL_ENV=test mocha lib/test/setup.js $(find lib -name '*.spec.js')",
    "prepublish": "npm run styles && npm run js && npm run svg",
    "js": "npm run js:esmodules && npm run js:amdmodule",
    "styles": "npm run styles:sass && npm run styles:minify && npm run styles:copy",
    "svg": "npm run svg:dist",
    "documentation": "npm run svg:docs && webpack -p --env=production",
    "js:esmodules": "NODE_ENV=production babel lib --out-dir es",
    "js:amdmodule": "NODE_ENV=production rollup -c",
    "styles:sass": "node-sass styles/componentry-clear-theme.scss dist/componentry.css --include-path=node_modules/bootstrap/scss",
    "styles:minify": "cleancss -o dist/componentry.min.css dist/componentry.css",
    "styles:copy": "cp -r styles/* dist",
    "svg:docs": "svg-sprite --defs --defs-dest=public/assets --defs-sprite=icons.svg assets/svgs/*.svg",
    "svg:dist": "svg-sprite --defs --defs-dest=dist/assets --defs-sprite=icons.svg assets/svgs/*.svg"
  },
  "keywords": [
    "react",
    "components",
    "ui",
    "508",
    "accessible",
    "bootstrap"
  ],
  "author": "Dan Hedgecock <hedgecock.d@gmail.com>",
  "license": "MIT",
  "peerDependencies": {
    "react": "15.x || 16.x"
  },
  "dependencies": {
    "babel-runtime": "^6.23.0",
    "bootstrap": "4.0.0-alpha.6"
  },
  "devDependencies": {
    "@crystal-ball/eslint-config-eloquence": "^1.1.0",
    "@inspire-script/webpack-configs": "~2.0.0",
    "babel-cli": "^6.24.1",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-plugin-transform-react-remove-prop-types": "^0.4.6",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-register": "^6.24.1",
    "chai": "^3.5.0",
    "clean-css-cli": "^4.1.6",
    "enzyme": "^2.7.1",
    "jsdom": "^9.12.0",
    "mocha": "^3.2.0",
    "node-sass": "^4.5.3",
    "prop-types": "^15.5.8",
    "react": "^15.5.4",
    "react-addons-test-utils": "^15.4.2",
    "react-dom": "^15.5.4",
    "react-router": "^4.0.0",
    "react-router-dom": "^4.0.0",
    "rollup": "^0.41.6",
    "rollup-plugin-babel": "^2.7.1",
    "rollup-plugin-babili": "^3.1.0",
    "rollup-plugin-commonjs": "^8.0.2",
    "rollup-plugin-node-resolve": "^3.0.0",
    "sinon": "^2.0.0",
    "svg-sprite": "^1.3.6"
  }
}
