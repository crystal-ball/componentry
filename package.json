{
  "name": "componentry",
  "version": "3.0.0-rc.4",
  "description": "React Componentry",
  "sideEffects": false,
  "main": "lib/index.js",
  "module": "es/index.js",
  "esnext": "esnext/index.js",
  "typings": "./src/index.d.ts",
  "keywords": [
    "react",
    "components",
    "ui",
    "508",
    "accessible",
    "bootstrap"
  ],
  "contributors": [
    "Dan Hedgecock <hedgecock.d@gmail.com>",
    "Phillip Sauerbeck <psauerbeck@gmail.com>"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/crystal-ball/componentry.git"
  },
  "engines": {
    "node": ">=8.11"
  },
  "scripts": {
    "start": "start-storybook -p 6006 --ci",
    "test": "npm run test:lint && npm run test:unit",
    "test:lint": "NODE_ENV=test eslint --format=pretty src test",
    "test:unit": "BABEL_ENV=test NODE_ENV=test jest",
    "test:watch": "BABEL_ENV=test NODE_ENV=test JEST_NOTIFY=true jest --watch",
    "format": "prettier --write '*.{js,json,md}' '**/*.{js,json,md,mdx,scss}' !CHANGELOG.md",
    "prepublishOnly": "npm run clean && npm run js",
    "postpublish": "npm run clean",
    "js": "npm run js:commonjs && npm run js:esmodules && npm run js:esnext",
    "js:commonjs": "BABEL_ENV=common babel src --out-dir lib --ignore '**/*.spec.js','**/*.stories.js'",
    "js:esmodules": "BABEL_ENV=esmodules babel src --out-dir es --ignore **/*.spec.js --ignore  '**/*.spec.js','**/*.stories.js'",
    "js:esnext": "BABEL_ENV=next babel src --out-dir esnext --ignore **/*.spec.js --ignore  '**/*.spec.js','**/*.stories.js'",
    "clean": "rm -rf dist monitor lib es esnext"
  },
  "peerDependencies": {
    "react": ">=16.8"
  },
  "dependencies": {
    "@babel/runtime": "7",
    "classnames": "2",
    "nanoid": "2"
  },
  "devDependencies": {
    "@babel/cli": "7.8.0",
    "@babel/core": "7.8.0",
    "@babel/plugin-transform-modules-commonjs": "7.8.0",
    "@babel/plugin-transform-runtime": "7.8.0",
    "@crystal-ball/commitizen-base": "2.3.0",
    "@crystal-ball/prettier-base": "1.6.0",
    "@storybook/addon-actions": "5.3.0",
    "@storybook/addon-docs": "5.3.0",
    "@storybook/addon-knobs": "5.3.0",
    "@storybook/addon-links": "5.3.0",
    "@storybook/addons": "5.3.0",
    "@storybook/preset-scss": "1.0.2",
    "@storybook/react": "5.3.0",
    "@storybook/theming": "5.3.0",
    "@testing-library/jest-dom": "4.2.4",
    "@testing-library/react": "9.4.0",
    "babel-loader": "8.0.6",
    "css-loader": "3.4.2",
    "eslint-config-eloquence": "12.17.0",
    "husky": "4.0.6",
    "jest": "24.9.0",
    "node-sass": "4.13.0",
    "react": "16.12.0",
    "react-dom": "16.12.0",
    "sass-loader": "8.0.1",
    "style-loader": "1.1.2"
  },
  "config": {
    "commitizen": {
      "path": "@crystal-ball/commitizen-base"
    }
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook"
    }
  },
  "prettier": "@crystal-ball/prettier-base"
}
