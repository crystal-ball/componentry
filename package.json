{
  "name": "componentry",
  "version": "3.0.0",
  "description": "React Componentry",
  "sideEffects": false,
  "main": "lib/index.js",
  "module": "es/index.js",
  "esnext": "esnext/index.js",
  "keywords": [
    "react",
    "components",
    "ui",
    "508",
    "accessible",
    "bootstrap"
  ],
  "contributors": [
    "Dan Hedgecock <hedgecock.d@gmail.com>",
    "Phillip Sauerbeck <psauerbeck@gmail.com>"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/crystal-ball/componentry.git"
  },
  "engines": {
    "node": "12"
  },
  "scripts": {
    "start": "start-storybook -p 6006 --ci",
    "babel:watch": "BABEL_ENV=esmodules babel src --watch --out-dir es --ignore '**/*.spec.js'",
    "test": "npm run test:lint && npm run test:unit",
    "test:lint": "NODE_ENV=test eslint --format=pretty .",
    "test:unit": "BABEL_ENV=test NODE_ENV=test jest",
    "test:watch": "BABEL_ENV=test NODE_ENV=test JEST_NOTIFY=true jest --watch",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "format": "prettier --write . !CHANGELOG.md",
    "prepublishOnly": "npm run clean && npm run js",
    "postpublish": "npm run clean",
    "js": "npm run js:commonjs && npm run js:esmodules && npm run js:esnext",
    "js:commonjs": "BABEL_ENV=common babel src --out-dir lib --ignore '**/*.spec.js'",
    "js:esmodules": "BABEL_ENV=esmodules babel src --out-dir es --ignore '**/*.spec.js'",
    "js:esnext": "BABEL_ENV=next babel src --out-dir esnext --ignore '**/*.spec.js'",
    "types": "tsc --emitDeclarationOnly",
    "clean": "rm -rf dist monitor lib es esnext"
  },
  "peerDependencies": {
    "react": ">=16.8"
  },
  "dependencies": {
    "@babel/runtime": "7",
    "classnames": "2",
    "nanoid": "3"
  },
  "devDependencies": {
    "@babel/cli": "7.10.5",
    "@babel/core": "7.10.5",
    "@babel/plugin-transform-modules-commonjs": "7.10.4",
    "@babel/plugin-transform-runtime": "7.10.5",
    "@babel/preset-typescript": "7.10.4",
    "@crystal-ball/commitizen-base": "2.7.1",
    "@crystal-ball/prettier-base": "2.2.0",
    "@storybook/addon-actions": "5.3.19",
    "@storybook/addon-docs": "5.3.19",
    "@storybook/addon-knobs": "5.3.19",
    "@storybook/addon-links": "5.3.19",
    "@storybook/addons": "5.3.19",
    "@storybook/preset-scss": "1.0.2",
    "@storybook/react": "5.3.19",
    "@storybook/theming": "5.3.19",
    "@testing-library/jest-dom": "5.11.0",
    "@testing-library/react": "10.4.6",
    "@types/classnames": "2.2.10",
    "babel-loader": "8.1.0",
    "css-loader": "3.6.0",
    "eslint-config-eloquence": "14.7.0",
    "husky": "4.2.5",
    "jest": "26.1.0",
    "sass": "1.26.10",
    "prettier": "2.0.5",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "sass-loader": "9.0.2",
    "style-loader": "1.2.1",
    "typescript": "3.9.6"
  },
  "prettier": "@crystal-ball/prettier-base",
  "config": {
    "commitizen": {
      "path": "@crystal-ball/commitizen-base"
    }
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook"
    }
  },
  "renovate": {
    "extends": [
      "github>crystal-ball/renovate-base:library"
    ]
  }
}
