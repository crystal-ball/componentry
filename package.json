{
  "name": "componentry",
  "version": "1.5.0",
  "description": "Radical React Components",
  "main": "dist/componentry.js",
  "module": "es/index.js",
  "esnext": "esnext/index.js",
  "engines": {
    "node": ">=6.9.5"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/crystal-ball/componentry"
  },
  "scripts": {
    "start": "NODE_ENV=development webpack-dev-server --env=development",
    "test": "BABEL_ENV=test mocha lib/utils-test/setup.js $(find lib -name '*.spec.jsx')",
    "prepublish": "npm run styles && npm run js",
    "deploy": "gh-pages -d build",
    "js": "npm run js:esmodules && npm run js:amdmodule",
    "styles": "npm run styles:sass && npm run styles:minify && npm run styles:copy",
    "eslint": "eslint --ext .js --ext .jsx src lib",
    "format": "prettier --single-quote --no-semi --print-width=84 --write \"{lib,src}/**/*.{js,jsx}\"",
    "documentation": "NODE_ENV=production webpack --env=production",
    "clean": "rm -rf dist es esnext",
    "js:esnext": "BABEL_ENV=esnext babel lib --out-dir esnext",
    "js:esmodules": "BABEL_ENV=production babel lib --out-dir es",
    "js:amdmodule": "BABEL_ENV=production rollup -c",
    "bootstrap:copy": "cp -a ./node_modules/bootstrap/scss/* ./styles/bootstrap",
    "styles:sass": "node-sass styles/componentry-clear-theme.scss dist/componentry.css --include-path=node_modules/bootstrap/scss",
    "styles:minify": "cleancss -o dist/componentry.min.css dist/componentry.css",
    "styles:copy": "cp -r styles/* dist"
  },
  "keywords": ["react", "components", "ui", "508", "accessible", "bootstrap"],
  "author": "Dan Hedgecock <hedgecock.d@gmail.com>",
  "license": "MIT",
  "peerDependencies": {
    "prop-types": "15.x",
    "react": "15.x || 16.x"
  },
  "dependencies": {
    "babel-runtime": "^6.23.0",
    "classnames": "^2.2.5",
    "nanoid": "^0.2.0"
  },
  "devDependencies": {
    "@crystal-ball/eslint-config-eloquence": "^3.1.0",
    "@inspire-script/webpack-configs": "^2.5.0",
    "babel-cli": "^6.24.1",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-plugin-transform-react-remove-prop-types": "^0.4.6",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-register": "^6.24.1",
    "bootstrap": "v4.0.0-beta",
    "chai": "^3.5.0",
    "clean-css-cli": "^4.1.6",
    "enzyme": "^2.7.1",
    "gh-pages": "^1.0.0",
    "jsdom": "^9.12.0",
    "mocha": "^3.2.0",
    "node-sass": "^4.5.3",
    "prettier": "^1.5.3",
    "prop-types": "^15.5.8",
    "react": "^15.5.4",
    "react-addons-test-utils": "^15.4.2",
    "react-dom": "^15.5.4",
    "react-router": "^4.0.0",
    "react-router-dom": "^4.0.0",
    "rollup": "^0.41.6",
    "rollup-plugin-babel": "^2.7.1",
    "rollup-plugin-babili": "^3.1.0",
    "rollup-plugin-commonjs": "^8.0.2",
    "rollup-plugin-node-resolve": "^3.0.0",
    "sinon": "^2.0.0"
  }
}
