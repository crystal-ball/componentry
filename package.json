{
  "name": "componentry",
  "version": "3.0.0-alpha.12",
  "description": "React Componentry",
  "sideEffects": false,
  "main": "lib/index.js",
  "module": "es/index.js",
  "esnext": "esnext/index.js",
  "typings": "./src/index.d.ts",
  "keywords": [
    "react",
    "components",
    "ui",
    "508",
    "accessible",
    "bootstrap"
  ],
  "contributors": [
    "Dan Hedgecock <hedgecock.d@gmail.com>",
    "Phillip Sauerbeck <psauerbeck@gmail.com>"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/crystal-ball/componentry.git"
  },
  "engines": {
    "node": ">=8.11"
  },
  "scripts": {
    "start": "start-storybook -p 6006 --ci",
    "test": "npm run test:lint && npm run test:unit",
    "test:lint": "NODE_ENV=test eslint --format=pretty src",
    "test:unit": "BABEL_ENV=test NODE_ENV=test jest",
    "test:watch": "BABEL_ENV=test NODE_ENV=test JEST_NOTIFY=true jest --watch",
    "format": "prettier --write \"{demo,src,styles}/**/*.{js,scss}\" guides/*.md",
    "prepublishOnly": "npm run clean && npm run js",
    "postpublish": "npm run clean",
    "js": "npm run js:commonjs && npm run js:esmodules && npm run js:esnext",
    "js:commonjs": "BABEL_ENV=common babel src --out-dir lib --ignore '**/*.spec.js','**/*.stories.js'",
    "js:esmodules": "BABEL_ENV=esmodules babel src --out-dir es --ignore **/*.spec.js --ignore  '**/*.spec.js','**/*.stories.js'",
    "js:esnext": "BABEL_ENV=next babel src --out-dir esnext --ignore **/*.spec.js --ignore  '**/*.spec.js','**/*.stories.js'",
    "clean": "rm -rf dist monitor lib es esnext"
  },
  "peerDependencies": {
    "react": ">=16.8"
  },
  "dependencies": {
    "@babel/runtime": "7",
    "@babel/runtime-corejs3": "7",
    "classnames": "2",
    "core-js": "3",
    "nanoid": "2"
  },
  "devDependencies": {
    "@babel/cli": "~7.5.5",
    "@babel/core": "~7.5.5",
    "@babel/plugin-syntax-object-rest-spread": "~7.2.0",
    "@babel/plugin-transform-modules-commonjs": "~7.5.0",
    "@crystal-ball/commit-semantics": "~1.2.0",
    "@crystal-ball/prettier-base": "~1.3.0",
    "@storybook/addon-actions": "~5.1.11",
    "@storybook/addon-knobs": "~5.1.11",
    "@storybook/addon-links": "~5.1.11",
    "@storybook/react": "~5.1.11",
    "@storybook/theming": "~5.1.11",
    "@testing-library/jest-dom": "~4.1.0",
    "@testing-library/react": "~9.1.3",
    "babel-loader": "~8.0.6",
    "babel-plugin-transform-react-remove-prop-types": "~0.4.24",
    "css-loader": "~3.2.0",
    "eslint-config-eloquence": "~12.4.0",
    "husky": "~3.0.4",
    "jest": "~24.9.0",
    "node-sass": "~4.12.0",
    "prop-types": "~15.7.2",
    "react": "~16.9.0",
    "react-dom": "~16.9.0",
    "sass-loader": "~7.3.1",
    "style-loader": "~1.0.0"
  },
  "config": {
    "commitizen": {
      "path": "@crystal-ball/commitizen-adapter"
    }
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook"
    }
  },
  "prettier": "@crystal-ball/prettier-base"
}
