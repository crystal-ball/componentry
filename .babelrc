{
  "env": {
    // Local Dev
    // ---------------------------------------------------------------------------
    "development": {
      "presets": [
        [
          "@babel/preset-env",
          {
            "modules": false,
            "targets": {
              "chrome": "59"
            }
          }
        ],
        "@babel/preset-react"
      ],
      "plugins": [
        "@babel/plugin-transform-flow-strip-types",
        "@babel/plugin-proposal-class-properties", // Class static and property initializers
        "@babel/plugin-transform-runtime" // runtime needed for generators
      ]
    },
    // Production - Bundling for ES5 AMD module and ES modules
    // ---------------------------------------------------------------------------
    "production": {
      "presets": [
        [
          "@babel/preset-env",
          {
            "modules": false
          }
        ],
        "@babel/preset-react"
      ],
      "plugins": [
        "@babel/plugin-transform-flow-strip-types",
        "@babel/plugin-proposal-class-properties",
        "@babel/plugin-transform-runtime" // Library babel-helpers with import statements
      ]
    },
    // Next - Transpiled to stage 4 for package.esnext
    // ---------------------------------------------------------------------------
    "esnext": {
      "presets": ["@babel/preset-react"],
      "plugins": [
        "@babel/plugin-transform-flow-strip-types",
        "@babel/plugin-proposal-class-properties",
        "@babel/plugin-transform-runtime"
      ]
    },
    // Test - Mocha setup cannot use esmodules
    // ---------------------------------------------------------------------------
    "test": {
      "presets": ["@babel/preset-env", "@babel/preset-react"],
      "plugins": ["@babel/plugin-transform-flow-strip-types","@babel/plugin-proposal-class-properties"]
    }
  }
}
