{
  "presets": [
    ["env", {
      "modules": false,
      "debug": false,
      "targets": {
        "browsers": ["last 2 versions"],
        "ie": ["11"],
        "node": "current"
      }
    }],
    "react"
  ],
  "plugins": [
    "transform-decorators-legacy", // decorators
    "transform-class-properties", // class static Properties
    "transform-export-extensions", // export * as
    "transform-object-rest-spread" // spread operator
  ],
  "env": {
    "development": {
      "plugins": ["react-hot-loader/babel"]
    },
    "production": {
      "presets": ["babili"], // minification
      "plugins": [
        "transform-react-remove-prop-types", // Strip propTypes declarations
        "transform-runtime" // Library babel-helpers import statements
      ]
    },
    "test": {
      "presets": ["env", "react"],
      // TODO: why do these plugins have to be declared again for test env???
      "plugins": [
        "transform-decorators-legacy",
        "transform-class-properties",
        "transform-object-rest-spread"
      ]
    }
  }
}
